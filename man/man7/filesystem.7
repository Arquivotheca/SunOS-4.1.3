.B /usr/etc/getty
.TP 
.B /etc/in.rlogind
.B /usr/etc/in.rlogind
.TP
.B /etc/in.routed
.B /usr/etc/in.routed
.TP
.B /etc/in.rshd
.B /usr/etc/in.rshd
.TP
.B /etc/inetd
