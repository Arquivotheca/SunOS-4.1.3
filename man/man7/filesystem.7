.TP
.B /etc/init
.B /usr/etc/init
.TP
.B /etc/nfsd
.B /usr/etc/nfsd
.TP
.B /etc/portmap
.B /usr/etc/portmap
.TP
.B /etc/rpc.lockd
.B /usr/etc/rpc.lockd
.TP
.B /etc/rpc.statd
.B /usr/etc/rpc.statd
.TP
.B /etc/ypbind
.B /usr/etc/ypbind
.TP
.B /usr/lib/sendmail.cf
.B /etc/sendmail.cf
.TP
.B /usr/preserve
.B /var/preserve
.TP
.B /usr/lib/aliases
.B /etc/aliases
.TP
.B /stand
.B /usr/stand
.TP
.B /etc/yp
