#!
# @(#)vers_gen 1.1 92/07/30
#
if [ ! -s version ]; 
	then echo  0.0 > version
fi
echo `cat version` $1 | \
awk '
$2 ~ /^\+((\.|[0-9])*)$/  \
{
	n1 = split($2, update, ".");
	n2 = split($1, old, ".")
	if (n1 > n2) last = n1; else last = n2;
	for (i = 1; i <= (last - 1); i++) {
		update[i] += old[i];
		printf "%d.", update[i];
	}
	printf "%d\n", (update[last] + old[last]) ;
}
$2 ~ /^[0-9]((\.[0-9])*)$/ { printf "%s\n", $2;}
(length($2) == 0) && ($1 ~ /^[0-9]((\.[0-9])*)$/) \
{
	printf "%s\n", $1;
}'
